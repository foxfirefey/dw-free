use strict;
BEGIN {
    require "$ENV{LJHOME}/cgi-bin/ljlib.pl";
}

use LJ::Worker::TheSchwartz;
use DW::Worker::ChangePosterId;

schwartz_decl( $_ )
    foreach ( DW::Worker::ChangePosterId->schwartz_capabilities );

schwartz_work(); # Never returns.
